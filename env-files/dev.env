# Development Environment Configuration
# This file configures the local development environment
# Secrets should be in env/secrets/secrets.env (not committed)

# Application
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_DB=retail_insights
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/retail_insights

# Redis
REDIS_URL=redis://localhost:6379/0

# DuckDB
DUCKDB_MEMORY_LIMIT=4GB
DUCKDB_THREADS=4

# S3 Data Path (local for development)
LOCAL_DATA_PATH=./data
S3_DATA_PATH=s3://retail-insights-dev/data

# LLM Settings
OPENAI_MODEL=gpt-4o

# UI
STREAMLIT_PORT=8501

# AWS Region
AWS_REGION=us-east-1
