# ============================================
# Retail Insights Assistant - Environment Config
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# Application Settings
# ============================================
APP_NAME=Retail Insights Assistant
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# API Settings
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o

# ============================================
# AWS Configuration (for S3 Parquet access)
# ============================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# S3 path to Parquet data
S3_DATA_PATH=s3://your-bucket/sales

# ============================================
# DuckDB Configuration
# ============================================
DUCKDB_MEMORY_LIMIT=4GB
DUCKDB_THREADS=4

# ============================================
# PostgreSQL (for checkpointing & vectors)
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nlsql

# ============================================
# Redis (for caching)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Streamlit Configuration
# ============================================
STREAMLIT_PORT=8501
